<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="36dp"
    android:background="@color/white"
    tools:context=".ui.views.login.LoginActivity">

    <ScrollView android:id="@+id/login_scroll_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="70dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="150dp"
                android:src="@drawable/photo_icon"/>

            <TextView android:id="@+id/sign_up_txt_welcome"
                style="@style/Theme.Instagram.TextViewBase.Form"
                android:text="@string/welcome_to_instagram"/>

            <co.tiagoaguiar.course.instagram.ui.commons.LoadingButton
                android:id="@+id/sign_up_button_next_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/next"/>

        </LinearLayout>

    </ScrollView>

    <TextView android:id="@+id/login_txt_has_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="24dp"
        android:background="@color/white"
        android:text="@string/agree_terms_policy"
        android:textAlignment="center"
        style="@style/Theme.Instagram.TextViewBase"/>

</androidx.constraintlayout.widget.ConstraintLayout>