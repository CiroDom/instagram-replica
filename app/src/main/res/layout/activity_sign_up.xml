<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="24dp"
    android:orientation="vertical"
    tools:context=".ui.views.signup.SignUpActivity">

    <FrameLayout android:id="@+id/sign_up_frag"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sign_up_txt_has_already_account"
        android:name="co.tiagoaguiar.course.instagram.ui.views.signup.SignUpEmailFrag"
        tools:layout="@layout/frag_sign_up_email"/>


    <TextView android:id="@+id/sign_up_txt_has_already_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingVertical="24dp"
        android:background="@color/white"
        android:text="@string/already_has_account"
        android:textAlignment="center"
        style="@style/Theme.Instagram.TextViewBase"/>

</androidx.constraintlayout.widget.ConstraintLayout>