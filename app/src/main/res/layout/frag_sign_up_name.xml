<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="36dp"
    android:background="@color/white"
    tools:context=".ui.views.login.LoginActivity">

    <ScrollView android:id="@+id/login_scroll_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.45">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="70dp"
            android:orientation="vertical">

            <ImageView android:id="@+id/sign_up_img"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="150dp"
                android:src="@drawable/photo_icon"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sign_up_inputlay_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Theme.Instagram.FormInputText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sign_up_edit_name"
                    style="@style/Theme.Instagram.FormEditText"
                    android:hint="@string/name"
                    android:inputType="textPersonName"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sign_up_inputlay_passw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Theme.Instagram.FormInputText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sign_up_edit_passw"
                    style="@style/Theme.Instagram.FormEditText"
                    android:hint="@string/password"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/sign_up_inputlay_passw_confirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Theme.Instagram.FormInputText">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/sign_up_edit_passw_confirm"
                    style="@style/Theme.Instagram.FormEditText"
                    android:hint="@string/password_confirm"
                    android:inputType="textPassword"/>

            </com.google.android.material.textfield.TextInputLayout>

            <co.tiagoaguiar.course.instagram.ui.commons.LoadingButton
                android:id="@+id/sign_up_button_next_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:text="@string/next"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>