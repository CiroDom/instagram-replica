<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="8dp"
    android:paddingVertical="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_img_search"
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_insta_profile_thin"/>

    <TextView
        android:id="@+id/item_txt_boldusersearch"
        style="@style/Theme.Instagram.TextViewBase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/item_img_search"
        app:layout_constraintTop_toTopOf="@id/item_img_search"
        android:text="@string/username"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/item_txt_usersearch"
        style="@style/Theme.Instagram.TextViewBase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/item_img_search"
        app:layout_constraintBottom_toBottomOf="@id/item_img_search"
        android:text="@string/username"/>

</androidx.constraintlayout.widget.ConstraintLayout>