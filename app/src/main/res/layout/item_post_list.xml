<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_circleimg_user"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_insta_profile_thin"
        app:civ_border_color="@color/gray_border"
        app:civ_circle_background_color="@color/gray_border"
        app:civ_border_width="1dp"/>
    
    <TextView
        android:id="@+id/item_txt_username"
        style="@style/Theme.Instagram.TextViewBase"
        app:layout_constraintStart_toEndOf="@id/item_circleimg_user"
        app:layout_constraintTop_toTopOf="@id/item_circleimg_user"
        app:layout_constraintBottom_toBottomOf="@id/item_circleimg_user"
        android:layout_marginStart="8dp"
        android:text="@string/username"/>

    <ImageView
        android:id="@+id/item_img_threedots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/item_circleimg_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/item_circleimg_user"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_more"/>

    <ImageView
        android:id="@+id/item_img_photo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_circleimg_user"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:src="@tools:sample/backgrounds/scenic"
        app:layout_constraintDimensionRatio="1:1"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:id="@+id/item_linlay_icons"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_img_photo"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/item_img_likeicon"
            style="@style/Theme.Instagram.LittleIcons"
            android:src="@drawable/ic_insta_heart"/>

        <ImageView
            android:id="@+id/item_img_commenticon"
            style="@style/Theme.Instagram.LittleIcons"
            android:src="@drawable/ic_insta_comment"/>

        <ImageView
            android:id="@+id/item_img_sendicon"
            style="@style/Theme.Instagram.LittleIcons"
            android:src="@drawable/ic_insta_send"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_txt_commentsection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_linlay_icons"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginHorizontal="8dp"
        android:text="@string/agree_terms_policy"
        android:maxLines="3"
        android:paddingHorizontal="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>