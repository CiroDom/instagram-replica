<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Instagram.FormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Theme.Instagram.FormInputText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="Theme.Instagram.FormEditText" parent="Theme.Instagram.FormContainer">
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textColorHint">@color/gray_border</item>
        <item name="android:gravity">start|center_vertical</item>
    </style>

    <style name="Theme.Instagram.EnterButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:padding">16dp</item>
        <item name="backgroundTint">@color/button_backgr</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Theme.Instagram.TextViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/gray_text</item>
    </style>
    
    <style name="Theme.Instagram.TextViewBase.Form">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="Theme.Instagram.Link" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/blue_enabled</item>
    </style>

</resources>